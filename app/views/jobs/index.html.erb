<div class="container">
  <div class="pull-right">
    <%= link_to("Add a job",new_job_path, class: "btn btn-primary") %>
  </div>

  <table class="table table-striped">
    <% @jobs.each do |job| %>
    <tr>
      <td><%= link_to(job.title, job_path(job)) %></td>
      <td><%= job.created_at %></td>
      <td><%= link_to("Edit", edit_job_path(job), class: "btn btn-primary") %></td>
      <td><%= link_to("Delete", job_path(job), method: :delete, class: "btn btn-primary",data:{confirm: "Are you sure?"}) %></td>
    </tr>
    <% end  %>
  </table>

</div>
